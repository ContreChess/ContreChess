                <div class="ui left icon input">
                  <i class="comments icon">&nbsp;</i>
                  <input type="text" name="passphrase" placeholder="pass phrase" />
                </div>
              </div>
              <button class="ui fluid labeled icon button create key">
                <i class="spy icon">&nbsp;</i>
                Create Key
              </button>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="mail icon">&nbsp;</i>
              <input type="text" name="bitmessage-address" placeholder="BM-*" />
